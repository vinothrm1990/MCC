<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.app.Custom_progress_dialog.AnimatedLoadingIndicator
        android:id="@+id/custom_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AnimatedLoadingIndicatorView.Large"
        android:layout_centerInParent="true"
        app:indicatorName="com.app.Custom_progress_dialog.ProgressBallMultipleIndicator"
        app:indicatorColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_progress"
        android:text="@string/loading"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_19sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>