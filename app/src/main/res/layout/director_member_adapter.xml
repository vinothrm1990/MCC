<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
xmlns:app="http://schemas.android.com/tools"
android:padding="3dp"
android:id="@+id/category_layout"
android:layout_height="wrap_content"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
app:ignore="NamespaceTypo">
<android.support.v7.widget.CardView
    android:layout_marginTop="5dp"
    android:id="@+id/cv_dir_member"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    card_view:cardMaxElevation="5dp"
    card_view:cardCornerRadius="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/dir_member_iv"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="2dp"
            android:src="@drawable/empty_image"
            app:civ_border_color="#CA2334"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#CA2334"
            app:civ_shadow_radius="10"
            card_view:civ_shadow_gravity="center"/>
        <LinearLayout
            android:weightSum="2"
            android:layout_toRightOf="@+id/dir_member_iv"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="0.5"
                android:id="@+id/name_layout"
                android:weightSum="2"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:id="@+id/dir_member_name_tv"
                    android:layout_toRightOf="@+id/dir_member_iv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:gravity="left"
                    android:text="Name"
                    android:paddingLeft="20dp"
                    android:fontFamily="@font/sans_regular"
                    android:textColor="#000"
                    android:textSize="18sp" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/dir_member_iv"
                    android:layout_below="@+id/dir_member_name_tv"
                    android:id="@+id/dir_member_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:text="Title"
                    android:gravity="left"
                    android:paddingRight="20dp"
                    android:fontFamily="@font/sans_bold"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:focusable="true"
                    android:clickable="true"
                    android:id="@+id/dir_member_view"
                    android:src="@drawable/ic_view"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>