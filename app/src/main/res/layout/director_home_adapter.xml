<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:padding="3dp"
    android:id="@+id/category_layout"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    app:ignore="NamespaceTypo">
    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:id="@+id/cv_home_guest"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="3dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        card_view:cardMaxElevation="5dp"
        card_view:cardCornerRadius="3dp">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/home_title_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="5dp"
                android:gravity="left"
                android:text="Title"
                android:paddingLeft="20dp"
                android:fontFamily="@font/sans_bold"
                android:textColor="#000"
                android:textSize="18sp" />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/home_profile_iv"
                android:layout_below="@+id/home_title_tv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/empty_image"
                app:civ_border_color="#CA2334"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#CA2334"
                app:civ_shadow_radius="10"
                card_view:civ_shadow_gravity="center"/>
            <TextView
                android:layout_below="@+id/home_profile_iv"
                android:background="@drawable/tv_gradient"
                android:id="@+id/home_name_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="5dp"
                android:gravity="right"
                android:text="Name"
                android:paddingRight="20dp"
                android:fontFamily="@font/sans_bold"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>