<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_gravity="center"
            android:layout_weight="1.8"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="@font/sans_bold"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:text="CONFIRM OTP :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/dir_validate_close"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:src="@drawable/ic_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <com.poovam.pinedittextfield.LinePinField
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:inputType="text"
        android:textColor="#000"
        android:fontFamily="@font/sans_bold"
        android:textSize="18sp"
        android:textSelectHandle="@drawable/text_handle"
        app:noOfFields="6"
        app:distanceInBetween="10dp"
        app:fieldColor="@color/colorPrimaryDark"
        app:highlightColor="@color/colorAccent"
        app:highlightEnabled="true"
        app:lineThickness="2dp"
        app:isCustomBackground="true"
        app:highlightSingleFieldMode="true"
        app:isCursorEnabled="true"
        android:background="#FFF"
        android:id="@+id/dir_otp_feild"
        android:layout_width="match_parent" />
    <LinearLayout
        android:layout_marginTop="170dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="15dp"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="VALIDATE"
            android:fontFamily="@font/sans_bold"
            android:textSize="16sp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/btn_dir_validate"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/text_dialog"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff" />
    </LinearLayout>
</RelativeLayout>