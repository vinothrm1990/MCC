<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:padding="3dp"
    android:id="@+id/category_layout"
    android:layout_height="fill_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    app:ignore="NamespaceTypo">
    <ScrollView
        android:layout_margin="5dp"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="#FFF"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#fff"
                    android:weightSum="2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:id="@+id/mem_post_dir_image"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/empty_image"
                        app:civ_border_color="#CA2334"
                        app:civ_border_width="2dp"
                        app:civ_shadow="true"
                        app:civ_shadow_color="#CA2334"
                        app:civ_shadow_radius="10"
                        card_view:civ_shadow_gravity="center"/>
                    <TextView
                        android:background="@drawable/tv_gradient"
                        android:layout_marginTop="2dp"
                        android:paddingRight="10dp"
                        android:textColor="#FFF"
                        android:gravity="right"
                        android:textSize="18sp"
                        android:fontFamily="@font/sans_bold"
                        android:text="Name"
                        android:id="@+id/mem_post_dir_name"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                </LinearLayout>
                <LinearLayout
                    android:background="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/mem_post_title_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="18sp"
                        android:text="Title"
                        android:textColor="#000"
                        android:gravity="left"
                        android:fontFamily="@font/sans_regular"
                        android:background="#FFF" />
                </LinearLayout>
                <LinearLayout
                    android:background="#FFF"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/empty_image"
                        android:layout_margin="1dp"
                        android:id="@+id/mem_post_image"
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="180dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/mem_post_download"
                        card_view:fabSize="mini"
                        android:fadingEdge="none"
                        card_view:backgroundTint="@color/colorPrimaryDark"
                        android:src="@drawable/ic_download"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>