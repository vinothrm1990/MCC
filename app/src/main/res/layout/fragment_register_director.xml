<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DirectorLoginFragment">
    <ScrollView
        android:id="@+id/director_layout"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/first_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vector_first"
                    android:layout_margin="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/sans_bold"
                        android:paddingRight="5dp"
                        android:text="First Name"/>
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/dir_reg_fname"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:fontFamily="@font/sans_regular"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/first_layout"
                android:id="@+id/second_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vector_first"
                    android:layout_margin="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/sans_bold"
                        android:paddingRight="5dp"
                        android:text="Last Name"/>
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/dir_reg_lname"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:fontFamily="@font/sans_regular"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/second_layout"
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vector_email"
                    android:layout_margin="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/sans_bold"
                        android:paddingRight="5dp"
                        android:text="Email"/>
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/dir_reg_email"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionNext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:fontFamily="@font/sans_regular"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/email_layout"
                android:id="@+id/mobile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vector_first"
                    android:layout_margin="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/sans_bold"
                        android:paddingRight="5dp"
                        android:text="Mobile No"/>
                    <LinearLayout
                        android:weightSum="2"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/dir_reg_phone"
                        android:layout_weight="0.5"
                        android:maxLength="10"
                        android:inputType="number"
                        android:imeOptions="actionGo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:fontFamily="@font/sans_regular"
                        android:background="@android:color/transparent" />
                        <Button
                            android:id="@+id/dir_reg_verify"
                            android:visibility="visible"
                            android:textColor="#FFF"
                            android:text="Verify"
                            android:textSize="12sp"
                            android:fontFamily="@font/sans_bold"
                            android:background="@drawable/round_corner"
                            android:layout_weight="1.5"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <ImageView
                            android:id="@+id/dir_reg_verified"
                            android:visibility="gone"
                            android:textColor="#FFF"
                            android:text="Verify"
                            android:textSize="12sp"
                            android:fontFamily="@font/sans_bold"
                            android:src="@drawable/ic_verified"
                            android:layout_weight="1.5"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pass_layout"
                android:layout_below="@+id/mobile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vector_password"
                    android:layout_margin="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/sans_bold"
                        android:paddingRight="5dp"
                        android:text="Password"/>
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/dir_reg_pass"
                        android:inputType="textPassword"
                        android:imeOptions="actionNext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:fontFamily="@font/sans_regular"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/confirm_layout"
                android:layout_below="@+id/pass_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vector_confirm"
                    android:layout_margin="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/sans_bold"
                        android:paddingRight="5dp"
                        android:text="Confirm Password"/>
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/dir_reg_cpass"
                        android:inputType="textPassword"
                        android:imeOptions="actionNext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:fontFamily="@font/sans_regular"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lang_layout"
                android:layout_below="@+id/confirm_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vector_password"
                    android:layout_margin="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/sans_bold"
                        android:paddingRight="5dp"
                        android:text="Language"/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:id="@+id/dir_spin_lang"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="15dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pos_layout"
                android:layout_below="@+id/lang_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vector_password"
                    android:layout_margin="25dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/sans_bold"
                        android:paddingRight="5dp"
                        android:text="Category"/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:id="@+id/dir_spin_cat"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="15dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/term_layout"
                android:layout_below="@+id/pos_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="15dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/dir_reg_agree"
                        android:buttonTint="@color/green"
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:text="I agree to the Terms &amp; Conditions"
                        android:textSize="16sp"
                        android:fontFamily="@font/sans_regular"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="80dp"
                android:id="@+id/button_layout"
                android:layout_below="@+id/term_layout"
                android:layout_width="match_parent"
                android:layout_margin="30dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/dir_reg_register"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="REGISTER"
                    android:background="@drawable/round_corner"
                    android:fontFamily="@font/sans_bold"
                    android:textSize="20sp"
                    android:textColor="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>