<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#10000000"
    android:layout_height="match_parent"
    tools:context=".director.DirectorProfileActivity">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">
                    <ImageView
                        android:id="@+id/mem_profile_edit"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="right"
                        android:visibility="visible"
                        android:src="@drawable/ic_edit"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/mem_profile_image"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/logo"
                        app:civ_border_color="#CA2334"
                        android:scaleType="centerInside"
                        app:civ_border_width="2dp"
                        app:civ_shadow="true"
                        app:civ_shadow_color="#CA2334"
                        app:civ_shadow_radius="10"/>
                    <LinearLayout
                        android:layout_margin="10dp"

                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:text="VIEW COUNT :"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:gravity="right"
                            android:fontFamily="@font/sans_bold"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/mem_profile_count"
                            android:fontFamily="@font/sans_bold"
                            android:paddingLeft="10dp"
                            android:layout_weight="1"
                            android:text="0"
                            android:textColor="#FFF"
                            android:textSize="16sp"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_margin="10dp"
                    android:background="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/vector_phone"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/sans_bold"
                            android:paddingRight="5dp"
                            android:text="Name"/>
                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/mem_profile_name"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:gravity="left"
                            android:enabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="15dp"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:fontFamily="@font/sans_regular"
                            android:background="@android:color/transparent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/vector_email"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/sans_bold"
                            android:paddingRight="5dp"
                            android:text="Email"/>
                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/mem_profile_email"
                            android:inputType="textEmailAddress"
                            android:imeOptions="actionNext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp"
                            android:enabled="false"
                            android:layout_marginBottom="15dp"
                            android:textSize="18sp"
                            android:gravity="left"                            android:textColor="#000"
                            android:fontFamily="@font/sans_regular"
                            android:background="@android:color/transparent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/vector_phone"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/sans_bold"
                            android:paddingRight="5dp"
                            android:text="Phone"/>
                        <TextView
                            android:id="@+id/mem_profile_phone"
                            android:maxLength="10"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="15dp"
                            android:enabled="false"
                            android:textSize="18sp"
                            android:gravity="left"                            android:textColor="#000"
                            android:fontFamily="@font/sans_regular"
                            android:background="@android:color/transparent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/vector_password"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/sans_bold"
                            android:paddingRight="5dp"
                            android:text="Category"/>
                        <TextView
                            android:id="@+id/mem_profile_cat"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:enabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="15dp"
                            android:textSize="18sp"
                            android:gravity="left"                            android:textColor="#000"
                            android:fontFamily="@font/sans_regular"
                            android:background="@android:color/transparent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/vector_first"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/sans_bold"
                            android:paddingRight="5dp"
                            android:text="Facebook ID"/>
                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/mem_profile_fb"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:enabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="15dp"
                            android:textSize="18sp"
                            android:gravity="left"
                            android:textColor="#000"
                            android:fontFamily="@font/sans_regular"
                            android:background="@android:color/transparent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_margin="10dp"
                    android:background="#FFF"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:weightSum="3"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="IMAGES"
                            android:textSize="16sp"
                            android:fontFamily="@font/sans_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="AUDIOS"
                            android:textSize="16sp"
                            android:fontFamily="@font/sans_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="VIDEOS"
                            android:textSize="16sp"
                            android:fontFamily="@font/sans_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:weightSum="3"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/mem_profile_view_photo"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:src="@drawable/ic_photo"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                        <ImageView
                            android:id="@+id/mem_profile_view_audio"
                            android:gravity="center"
                            android:src="@drawable/ic_audio"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                        <ImageView
                            android:id="@+id/mem_profile_view_video"
                            android:gravity="center"
                            android:src="@drawable/ic_video"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>