<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".member.MemberUploadActivity">
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="3"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="IMAGE"
                android:textSize="16sp"
                android:fontFamily="@font/sans_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="AUDIO"
                android:textSize="16sp"
                android:fontFamily="@font/sans_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="VIDEO"
                android:textSize="16sp"
                android:fontFamily="@font/sans_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="3"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/mem_profile_photo"
                android:gravity="center"
                android:visibility="visible"
                android:layout_weight="1"
                android:src="@drawable/ic_photo"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <ImageView
                android:id="@+id/mem_profile_photo_verified"
                android:visibility="gone"
                android:gravity="center"
                android:src="@drawable/ic_verified"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <ImageView
                android:id="@+id/mem_profile_audio"
                android:gravity="center"
                android:src="@drawable/ic_audio"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <ImageView
                android:id="@+id/mem_profile_audio_verified"
                android:visibility="gone"
                android:gravity="center"
                android:src="@drawable/ic_verified"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <ImageView
                android:id="@+id/mem_profile_video"
                android:gravity="center"
                android:src="@drawable/ic_video"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <ImageView
                android:id="@+id/mem_profile_video_verified"
                android:visibility="gone"
                android:gravity="center"
                android:src="@drawable/ic_verified"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"  />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/mem_media_upload"
                android:clickable="true"
                android:gravity="center"
                android:text="UPLOAD"
                android:background="@drawable/round_corner"
                android:fontFamily="@font/sans_bold"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>