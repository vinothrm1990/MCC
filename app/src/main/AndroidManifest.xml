<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.mcc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".helper.MCC"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/TrasparentTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.StartActivity"
            android:theme="@style/TrasparentTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".director.DirectorHomeActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".director.DirectorProfileActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".director.DirectorPostActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".director.DirectorWishlistActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".director.DirectorViewActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity android:name=".director.DirectorFeedbackActivity"
            android:parentActivityName=".activity.HomeActivity"/>
    </application>

</manifest>